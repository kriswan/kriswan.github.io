// Search
// --------------------------------------------------

.site-search{
  float: right;
  margin-top: 8px;
}

@media (max-width: 767px) {
  .site-search {
    float: none;
    padding: 0 10px;
  }
}

.site-search input {
  padding: 3px;
  border: none;
  padding-left: 18px;
  border-radius: 0;
  width: 140px;
  background: url("data:image/svg+xml;base64,") no-repeat 0 50%;
  background-size: 12px 12px;
  outline: none;
  border-bottom: 1px solid #999;
  opacity: 0.5;
}
.site-search input:focus {
  opacity: 1;
}
