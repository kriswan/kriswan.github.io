    <link href="http://kriswan.github.io/2016/06/02/%E5%88%86%E5%B8%83%E5%BC%8F%E4%BA%8B%E7%89%A9-%EF%BC%8D/"/>
    <id>http://kriswan.github.io/2016/06/02/分布式事物-－/</id>
    <published>2016-06-02T11:08:29.000Z</published>
